<%= f.fields_for :puppet_aspect_attributes, puppet_aspect do |ff| %>
  <%= ff.hidden_field :id %>
  <%= select_f ff, :environment_id, Environment.with_taxonomy_scope_override(@location,@organization).order(:name), :id, :to_label, { :include_blank => true },
      {:onchange => 'update_puppetclasses(this)', :'data-url' => hostgroup_or_environment_selected_hosts_path,
      :'data-host-id' => @host.id, :help_inline => :indicator} %>

  <%= puppet_master_fields ff %>

<% end %>